#include<iostream>
#include<fstream>

using namespace std;

int main()
{
   int n, aux = 0;

   cin >> n;
	ofstream f("L.txt");
   f<<n<<"\n";
   for(int i = 0; i < n; i++)
	{
		for(int j = 0; j <= i; j++)
		{
			f<<(i*n + j + 1)<<" ";	
		}
		for(int j = i+1; j < n; j++)
		{
			f<<0<<" ";	
		}
		f<<"\n";
	}
	for(int i = 0; i < n; i++)
	{
		f<<1<<"\n";	
	}
	return 0;
	
}